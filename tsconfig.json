{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/api": ["src/js/api/index.js"],
      "@/constants/*": ["src/js/constants/*"],
      "@/redux-actions/*": ["src/js/redux/actions/*"],
      "@/SSR/*": ["src/js/SSR/*"],
      "@/websocket/*": ["src/js/websocket/*"],
      "@/services/*": ["src/js/services/*"],
      "@/contexts/*": ["src/js/contexts/*"],
      "@/hooks/*": ["src/js/hooks/*"],
      "@/utils/*": ["src/js/utils/*"],
      "@/icons/*": ["src/js/icons/*"],
      "@/pages/*": ["src/js/pages/*"],
      "@/components/*": ["src/js/components/*"],
      "@/assets/*": ["src/assets/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx",
    ".next/types/**/*.ts",
    ".next/types/**/*.js"
  ],
  "exclude": ["node_modules"]
}
